
<%- include('header'); -%>
    <div class="box" id="heading">
        <h1><%= listTitle %> !</h1>
    </div>

    <div class="box">
        <% for(let i = 0;i<listItems.length;i++){ %> 
          <form action="/delete" method="post">
            <div class="item">
              <input type="checkbox" name="checkbox" onchange="this.form.submit()" value="<%= listItems[i].id  %>">
              <p><%= listItems[i].name  %> </p>
              <input type="hidden" name="listName" value=<%= listTitle  %>>
            </div>
          </form>
            <%  } %> 
        <form class = "item" action="/" method="POST">
        <input type="text" name="newItem" placeholder="add task" autocomplete="off" autofocus="true">
        <button type="submit" name="list" value=<%= listTitle  %> >+</button>
    </form>
    </div>
    <%- include('footer'); -%>
    
